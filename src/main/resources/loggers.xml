<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="fileEventLogger" class="com.spring.core.logger.FileEventLogger">
        <property name="filename" value="events_log.txt"/>
    </bean>
    <bean id="cacheFileEventLogger" parent="fileEventLogger" class="com.spring.core.logger.CacheFileEventLogger"
          init-method="initCache" destroy-method="destroy">
        <property name="cacheSize" value="5"/>
    </bean>
    <bean id="combinedEventLogger" class="com.spring.core.logger.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>
</beans>